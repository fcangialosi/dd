<div id="virtual-start">
<div class="container">
<div style="height:15px"></div>
<h1 class="ui center aligned huge dividing header">Order Now</h1>

<% if (session && session.User && session.User.email != null) { %>
    <center>
        Hi <%= session.User.name %>, you're already logged in! (<a href="/session/destroy">logout</a>)
        <br>
        <br>
        <a id="clear-button" class="huge ui green button" href="/virtualcafe/order" style="font-family: 'Montserrat', sans-serif;">Get Started</a>
    </center>
<% } else { %>
	<!--<div class="ui warning message">
		<b> NOTE: If you have trouble creating a new account, please register for an
			account through our <a href="/catering/order/start">catering system</a> and then
			simply click back to <a href="/virtualcafe">Virtual Cafe</a> in the top
			menu bar. We apologize for the inconvenience!</b> 
	</div>-->
<div class="ui top aligned stackable grid">
    <div class="two wide column"></div>
    <div class="six wide column">
      <form action="/user/create" method="POST" class="ui warning form
				segment" id="virtual-signup-form" onsubmit="simpleCart.empty()" style="pointer-events: all;">
        <h4><b>New Customer?</b></h4>
        <% if(flash && flash.err && flash.type == 'signup') { %>
        <div class="ui warning message">
          <div class="header"><%- JSON.stringify(flash.err['name']) %></div>
          <ul class="list">
            <li><%- JSON.stringify(flash.err['err']) %></li>
          </ul>
        </div>
        <% } %>
        <div class="ui error message"></div>
        <div class="field">
          <label>Name</label>
          <div class="ui left labeled icon input">
            <input type="text" name="name" placeholder="Your Name">
            <i class="user icon"></i>
            <div class="ui corner label">
              <i class="icon asterisk"></i>
            </div>
          </div>
        </div>
        <div class="field">
          <label>E-Mail</label>
          <div class="ui left labeled icon input">
            <input type="text" name="email" placeholder="Your Email">
            <i class="mail icon"></i>
            <div class="ui corner label">
              <i class="icon asterisk"></i>
            </div>
          </div>
        </div>
        <input type="submit" class="ui blue submit button" value="Continue" id="clear-button">
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
        <input type="hidden" name="_type" value="virtual">
        <input type="hidden" name="_new_customer" value="true">
      </form>
    </div>
    <div class="six wide column">
      <form action="/session/create" method="POST" class="ui warning
				form segment" id="signin-form" onsubmit="simpleCart.empty()" style="pointer-events: all;">
        <h4><b>Returning Customer?</b></h4>
        <% if(flash && flash.err && flash.type == 'signin') { %>
        <div class="ui warning message">
          <% Object.keys(flash.err).forEach(function(error) { %>
          <div class="header"><%- JSON.stringify(flash.err[error]['name']) %></div>
          <ul class="list">
            <li><%- JSON.stringify(flash.err[error]['message']) %></li>
          </ul>
          <% }) %>
        </div>
        <% } %>
        <div class="ui error message"></div>
        <div class="field">
        <label>E-Mail</label>
          <div class="ui left labeled icon input">
            <input type="text" name="email" placeholder="Email Address">
            <i class="user icon"></i>
            <div class="ui corner label">
              <i class="icon asterisk"></i>
            </div>
          </div>
        </div>
        <input type="submit" class="ui blue submit button" value="Continue!" id="clear-button">
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
        <input type="hidden" name="_type" value="virtual">
        <input type="hidden" name="_new_customer" value="false">
      </form>
    </div>
    <div class="two wide column"></div>
    </div>
<% } %>
<div style="height:150px"></div>
</div>
</div>
