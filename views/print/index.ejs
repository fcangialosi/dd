<div class="header">
    <div>
        David and Dad's Catering<br>
        115 N. Charles St, Baltimore, MD 21201  |
        (410)-547-0550<br>
        Monday-Friday 6:30am - 3:00pm, Saturday 8:00am-1:00pm
    </div>
</div>
<div class="ui stackable stretched four column grid" style="padding-top:30px;">
    <% var modmenu = [
        [menu[2]],
        [menu[3]],
        [menu[4], menu[5]],
        [menu[6]],
        [menu[7],menu[9]],
        [menu[8], menu[11]],
        [menu[10]],
        [menu[13]],
        [menu[11],menu[0],menu[1]],
        [menu[15]],
        [menu[14]],
    ] %>
<% _.each(modmenu, function(col) { %>
    <div class="ui column section">
        <% _.each(col, function(section) { if (section) { %>
            <h2 class="section-header" id="<%=section.name%>"><%= section.name %></h2>
            <% _.each(section.items, function(item) { if (item) { %>
            <div class="menu-item">
                <span class="item-name"><%= item.name %></span>
                <span class="item-price"><%= item.price %></span>
                <br>
                <% if ('description' in item) { %>
                    <span class="item-desc">
                        <%= item.description %>
                    </span>
                <% } %>
                <% if (section.menu === "catering") { %>
                    <span class="item-serves">
                        <% if(item.minimum) { %>
                        (<%=  item.minimum%>)
                        <%} else if(item.serves) {%>
                        (<%=item.serves%>)
                        <%} else {%>
                        <%}%>
                    </span>
                <% } %>
            </div>
            <% }})%>
        <% }})%>
    </div>
<% }) %>
</div>
