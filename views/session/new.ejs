<div id="login-step-section">
  <div class="container">
    <div class="ui five medium steps" style="margin-top: 46px; margin-bottom: 35px;">
      <div class="ui active step">
        Start My Order
      </div>
      <div class="ui disabled step">
        When &amp; Where
      </div>
      <div class="ui disabled step">
        Food
      </div>
      <div class="ui disabled step">
        Payment
      </div>
      <div class="ui disabled step">
        Review &amp; Confirm
      </div>
    </div>
  </div>
  <div class="ui top aligned grid" id="wood">
    <div class="two wide column"></div>
    <div class="six wide column">
      <form action="/user/create" method="POST" class="ui warning form segment" id="signup-form">
        <h4><b>New Customer?</b></h4>
        <% if(flash && flash.err && flash.err[0].type == 'signup') { %>
        <div class="ui warning message">
          <% Object.keys(flash.err).forEach(function(error) { %>
          <div class="header"><%- JSON.stringify(flash.err[error]['name']) %></div>
          <ul class="list">
            <li><%- JSON.stringify(flash.err[error]['message']) %></li>
          </ul>
          <% }) %>
        </div>
        <% } %>
        <div class="ui error message"></div>
        <div class="field">
          <label> Company Contact</label>
          <div class="ui left labeled icon input">
            <input type="text" name="name" placeholder="Name">
            <i class="user icon"></i>
            <div class="ui corner label">
              <i class="icon asterisk"></i>
            </div>
          </div>
        </div>
        <div class="field">
          <label>Company Name</label>
          <div class="ui left labeled icon input">
            <input type="text" name="companyName" placeholder="Company Name">
            <i class="briefcase icon"></i>
            <div class="ui corner label">
              <i class="icon asterisk"></i>
            </div>
          </div>
        </div>
        <div class="field">
          <label>E-Mail</label>
          <div class="ui left labeled icon input">
            <input type="text" name="email" placeholder="Email Address">
            <i class="mail icon"></i>
            <div class="ui corner label">
              <i class="icon asterisk"></i>
            </div>
          </div>
        </div>
        <input type="submit" class="ui green submit button" value="I'm Ready to Order!">
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
      </form>
    </div>
    <div class="six wide column">
      <form action="/session/create" method="POST" class="ui warning form segment" id="signin-form">
        <h4><b>Returning Customer?</b></h4>
        <% if(flash && flash.err && flash.err[0].type == 'signin') { %>
        <div class="ui warning message">
          <% Object.keys(flash.err).forEach(function(error) { %>
          <div class="header"><%- JSON.stringify(flash.err[error]['name']) %></div>
          <ul class="list">
            <li><%- JSON.stringify(flash.err[error]['message']) %></li>
          </ul>
          <% }) %>
        </div>
        <% } %>
        <div class="ui error message"></div>
        <div class="field">
          <div class="ui left labeled icon input">
            <input type="text" name="email" placeholder="Email Address">
            <i class="user icon"></i>
            <div class="ui corner label">
              <i class="icon asterisk"></i>
            </div>
          </div>
        </div>
        <input type="submit" class="ui blue submit button" value="I'm Ready to Order!">
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
      </form>
    </div>
    <div class="two wide column"></div>
  </div>
</div>
<div style="height:30px; position: relative;" class="below-step">
  <div class="step-up-divider" style="top: -11px;"></div>
</div>