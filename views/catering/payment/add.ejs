<div id="step-section">
  <div class="container">
   <div class="ui five medium steps" style="margin-top: 46px; margin-bottom: 35px;">
    <div class="ui disabled step">
      Start My Order
    </div>
    <div class="ui disabled step">
      When &amp; Where
    </div>
    <div class="ui disabled step">
      Food
    </div>
    <div class="ui active step">
      Payment
    </div>
    <div class="ui disabled step">
      Review &amp; Confirm
    </div>
  </div>
</div>
<div class="up-divider"></div>
</div>

<h1 class="title">Add New Credit Card</h1>

<div class="ui two column relaxed page grid">
  <div class="middle aligned row">
    <div class="column">
      <form action="/user/addPayment" method="POST" class="ui warning fluid form segment" id="card-form">

        <% if(flash && flash.err) { %>
        <div class="ui warning message">
          <% Object.keys(flash.err).forEach(function(error) { %>
          <div class="header"><%- JSON.stringify(flash.err[error]['name']) %></div>
          <ul class="list">
            <li><%- JSON.stringify(flash.err[error]['message']) %></li>
          </ul>
          <% }) %>
        </div>
        <% } %>

        <p class="warning-border">By default, we store your credit card information locally to make the order process as quick and easy as possible. However, if you would prefer that we don't store any of your information, just check box below!</p>

        <div class="field">
          <label>Card Number</label>
          <input placeholder="1234 5678 1234 5678" name="number" type="text">
        </div>
        <div class="field">
          <label>Name On Card</label>
          <input placeholder="David Cangialosi" name="name" type="text">
        </div>
        <div class="two fields">
          <div class="field">
            <label>Expiration Date</label>
            <input placeholder="06/2016" name="expiry" type="text">
          </div>
          <div class="field">
            <label>CVC Code</label>
            <input placeholder="123" name="cvc" type="text">
          </div>
        </div>
        <div class="field">
          <div class="ui checkbox">
            <input type="checkbox" name="save">
            <label>Please don't store any of my credit card information!</label>
          </div>
        </div>
        <input type="submit" class="ui teal submit button" value="Continue">
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
        <div class="ui error message"></div>
      </form>
    </div>
    <div class="card-wrapper column">
      <!-- card.js fills this in with credit card animation -->
    </div>
  </div>
</div>